{
  "version": "0.2.0",
  "configurations": [
    {
      // 一般 Delve 偵錯模式
      "name": "Debug (Standard)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}",
      "env": {
        "PATH": "/opt/homebrew/bin:/Users/kent/go/bin:${env:PATH}",
        "GOROOT": "",
        "GOPATH": "/Users/kent/go",
        "AIR_DEBUG": "false"
      },
      "args": [],
      "showLog": true
    },
    {
      "name": "Debug with Hot Reload",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "port": 40000,
      "host": "127.0.0.1",
      "debugAdapter": "legacy",
      "showLog": true
    }
  ]
}